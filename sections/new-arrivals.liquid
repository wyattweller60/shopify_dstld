<div class="container-fluid">
  <div class="col-sm-12">
  {% include 'headline-title', content: section.settings.headline_text %}
  </div>
  <div class="col-sm-12 tab-content">
    <div class="product-grid tab-pane active" id="all">
      {% for block in section.blocks %}
        {%- assign product = all_products[block.settings.product] -%}
        {% include 'collection-product', product: product %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "New Arrivals",
  "settings": [
    {
      "type": "text",
      "id": "headline_text",
      "label": "Section Title",
      "default": "New Arrival"
    }
  ],
  "blocks": [
    {
      "type": "new_arrival_product",
      "name": "New Arrival Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 20
}
{% endschema %}
