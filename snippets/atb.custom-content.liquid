{% assign block_text = val %}
{% include 'atb-render' field:'block_width' %}
{% assign block_width = val %}
{% include 'atb-render' field:'block_alignment' %}
{% assign block_alignment = val %}
{% include 'atb-render' field:'block_align_text' %}
{% assign block_align_text = val %}
{% include 'atb-render' field:'block_image' %}
{% assign block_image = val %}
{% include 'atb-render' field:'block_product' %}
{% assign block_product = val %}
{% include 'atb-render' field:'block_collection' %}
{% assign block_collection = val %}
{% include 'atb-render' field:'block_code' %}
