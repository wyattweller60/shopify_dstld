{% include 'atb-render' field:'block_video_url_id' %}
{% assign block_video_url_id = val %}
{% include 'atb-render' field:'block_video_url_type' %}
{% assign block_video_url_type = val %}

<section id="shopify-section-{{section_id}}" class="shopify-section index-section">
<div class="page-width">
  {% if atb_title != blank %}
    <div class="section-header text-center">
      <h4 class="h2">{{ atb_title | escape }}</h4>
    </div>
  {% endif %}

  <div class="custom-content">
    {% for block_type0 in block_type %}
{% assign my_image_key0 = block_image[forloop.index0]| split: '/files/' | last %}
{% assign my_image0 = images[my_image_key0] %}
      {% case block_width[forloop.index0] %}
        {% when '25%' %}
          {%- assign max_height = 250 -%}
          {%- assign block_width = 'small--one-half medium-up--one-quarter' -%}
        {% when '33%' %}
          {%- assign max_height = 345 -%}
          {%- assign block_width = 'small--one-half medium-up--one-third' -%}
        {% when '50%' %}
          {%- assign max_height = 530 -%}
          {%- assign block_width = 'small--one-half medium-up--one-half' -%}
        {% when '66%' %}
          {%- assign max_height = 720 -%}
          {%- assign block_width = 'two-thirds' -%}
        {% when '75%' %}
          {%- assign max_height = 810 -%}
          {%- assign block_width = 'three-quarters' -%}
        {% when '100%' %}
          {%- assign max_height = 1090 -%}
          {%- assign block_width = 'one-whole' -%}
      {% endcase %}

      {% if block_type[forloop.index0] == 'image' %}
        {% capture img_id %}CustomImage--{{ forloop.index }}-{{ my_image0.id }}{% endcapture %}
        {% capture img_wrapper_id %}CustomImageWrapper--{{ forloop.index }}-{{ my_image0.id }}{% endcapture %}

        {% unless my_image0 == blank %}
          {% include 'atb-image-style' with image: my_image0, small_style: false, width: max_height, height: max_height, wrapper_id: img_wrapper_id, img_id: img_id %}
        {% endunless %}
      {% endif %}

      <div class="custom__item custom__item--{{block.id}} {{ block_width }} {% if block_alignment[forloop.index0] %}align--{{ block_alignment[forloop.index0] }}{% endif %}" {{ block.shopify_attributes }}>
        <div class="custom__item-inner custom__item-inner--{{ block_type[forloop.index0] }}"{% if block_type[forloop.index0] == 'image' %} id="{{ img_wrapper_id }}"{% endif %}>
          {% case block_type[forloop.index0] %}
            {% when 'image' %}
              {% if my_image0 != blank %}
                {%- assign img_url = my_image0 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                <div style="padding-top:{{ 1 | divided_by: my_image0.aspect_ratio | times: 100}}%;">
                  <img id="{{ img_id }}"
                       class="custom__image lazyload js"
                       src="{{ my_image0 | img_url: '300x300' }}"
                       data-src="{{ img_url }}"
                       data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                       data-aspectratio="{{ my_image0.aspect_ratio }}"
                       data-sizes="auto"
                       alt="{{ my_image0.alt | escape }}">
                </div>
                <noscript>
                  {% capture image_size %}{{ max_height }}x{% endcapture %}
                  {{ my_image0 | img_url: image_size, scale: 2, crop: 'top' | img_tag: block_image[forloop.index0].alt, 'custom__image' }}
                </noscript>
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            {% when 'text' %}
              <div class="medium-up--text-{{ block_align_text[forloop.index0] }}">
                {% if block_title[forloop.index0] != blank %}
                  <h4 class="h3">{{ block_title[forloop.index0] | escape }}</h4>
                {% endif %}
                {% if block_text[forloop.index0] != blank %}
                  <div class="rte-setting rte">{{ block_text[forloop.index0] }}</div>
                {% endif %}
              </div>
            {% when 'video' %}
              <div class="video-wrapper">
                {% if block_video_url_id[forloop.index0] == blank %}
                  <iframe src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                {% else %}
                  {% if block_video_url_type[forloop.index0] == "youtube" %}
                    <iframe src="//www.youtube.com/embed/{{ block_video_url_id[forloop.index0] }}?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                  {% endif %}
                  {% if block_video_url_type[forloop.index0] == "vimeo" %}
                    <iframe src="//player.vimeo.com/video/{{ block_video_url_id[forloop.index0] }}?byline=0&portrait=0&badge=0" width="850" height="480" frameborder="0" allowfullscreen></iframe>
                  {% endif %}
                {% endif %}
              </div>
            {% when 'product' %}
              {%- assign product = all_products[block_product[forloop.index0]] -%}
              {% if product.title.size > 0 %}
                {% include 'product-card-grid', max_height: max_height %}
              {% else %}
                {% comment %}
                  No product yet. Show onboarding one.
                {% endcomment %}
                <div class="grid-view-item">
                  <a class="grid-view-item__link" href="#">
                    <div class="grid-view-item__image">
                      {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                      {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                    <div class="h4 grid-view-item__title">{{ 'homepage.onboarding.product_title' | t }}</div>
                    <div class="grid-view-item__meta">
                      {{ 1999 | money }}
                    </div>
                  </a>
                </div>
              {% endif %}
            {% when 'collection' %}
              {%- assign collection = collections[block_collection[forloop.index0]] -%}
              {% include 'collection-grid-item' %}
            {% when 'html' %}
              {% if block_code[forloop.index0] != blank %}
                {{ block_code[forloop.index0] }}
              {% endif %}
          {% endcase %}
        </div>
      </div>

    {% endfor %}
  </div>

  {% if block_type.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
</div>




</section>
